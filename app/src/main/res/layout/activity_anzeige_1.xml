<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Anzeige_1" android:background="#000000" android:id="@+id/layout">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="5dp" android:layout_marginEnd="5dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="5dp" android:id="@+id/timeField" android:textSize="30sp"
            android:textColor="#FFFFFF"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/speed"
            android:gravity="center" android:textSize="100sp"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="140dp"
            app:layout_constraintEnd_toStartOf="@+id/speedLabel" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="88dp"
            android:layout_height="71dp" app:srcCompat="@drawable/battery100"
            android:id="@+id/akkuIcon"
            app:layout_constraintTop_toTopOf="@+id/speedIcon" app:layout_constraintEnd_toEndOf="@+id/akkuNumber"
            app:layout_constraintStart_toStartOf="@+id/akkuNumber"/>
    <ImageView
            android:layout_width="66dp"
            android:layout_height="67dp" app:srcCompat="@drawable/option"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/option" android:onClick="showOptions"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/akkuNumber"
            android:background="#000000" android:autoText="false"
            android:textColor="#FFFFFF" android:textSize="100sp" android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/speed"
            app:layout_constraintEnd_toStartOf="@+id/akkuLabel"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/geschwLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/speedLabel"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/speed"
            android:layout_marginBottom="15dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="200dp" android:layout_marginStart="200dp"/>
    <Button
            android:text="@string/spiegelnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp" android:id="@+id/mirrorButton"
            android:onClick="mirrorDisplay" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/akkuLabel"
            android:textSize="30sp" android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/akkuNumber"
            android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="100dp"
            android:layout_marginEnd="100dp"/>
    <ImageView
            android:layout_width="114dp"
            android:layout_height="62dp" app:srcCompat="@drawable/speedicone" android:id="@+id/speedIcon"
            app:layout_constraintStart_toStartOf="@+id/speed"
            android:layout_marginTop="5dp" app:layout_constraintTop_toBottomOf="@+id/speed"
            app:layout_constraintEnd_toEndOf="@+id/speed"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/errorText" android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>
