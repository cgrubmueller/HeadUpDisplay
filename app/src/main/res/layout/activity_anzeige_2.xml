<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Anzeige_2" android:background="#000000">

    <Button
            android:text="@string/spiegelnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" android:id="@+id/mirrorButton2"
            app:layout_constraintStart_toEndOf="@+id/option2" android:layout_marginLeft="250dp"
            android:layout_marginStart="250dp" android:onClick="mirrorDisplay"/>
    <TextView
            android:text="@string/geschwLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/speedLabel2"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="@+id/speed2"
            android:layout_marginBottom="35dp" app:layout_constraintStart_toStartOf="@+id/speed2"
            android:layout_marginLeft="200dp" android:layout_marginStart="200dp"/>
    <TextView
            android:text="100"
            android:layout_width="210dp"
            android:layout_height="130dp" android:id="@+id/speed2"
            android:gravity="center" android:textSize="100sp"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="110dp"
    />
    <TextView
            android:text="100%"
            android:layout_width="100dp"
            android:layout_height="50dp" android:id="@+id/akkuNumber2"
            android:background="#000000" android:autoText="false"
            android:textColor="#FFFFFF" android:textSize="36sp" android:gravity="center"
            app:layout_constraintTop_toTopOf="@+id/speedLabel2"
            app:layout_constraintStart_toStartOf="@+id/akkuIcon2" android:layout_marginLeft="190dp"
            android:layout_marginStart="190dp"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="140dp" app:srcCompat="@drawable/battery100"
            android:id="@+id/akkuIcon2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="90dp"
            android:layout_marginEnd="90dp" app:layout_constraintTop_toTopOf="@+id/speed2"
    />
    <ImageView
            android:layout_width="66dp"
            android:layout_height="67dp" app:srcCompat="@drawable/option"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/option2" android:onClick="showOptions"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="5dp" android:layout_marginEnd="5dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="5dp" android:id="@+id/timeField2" android:textSize="30sp"
            android:textColor="#FFFFFF"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/errorText2" android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>